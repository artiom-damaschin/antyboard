{
    "compilerOptions": {
        "types": ["react", "jest"],
        "outDir": "dist/",
        "sourceMap": true,
        "strict": true,
        "strictFunctionTypes": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2018",
        "allowJs": true,
        "jsx": "react",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}
